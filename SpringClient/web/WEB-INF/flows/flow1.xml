<?xml version="1.0" encoding="UTF-8"?>

<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
		http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">
	
	<!-- New customers create a new account before moving forward -->
	<view-state id="flow1" view="/SpringClient/flowpage1">
		<transition on="flow2button" to="goto2"/>
    <transition on="flow3button" to="goto3"/>
    <transition on="homeButton" to="gotoHome"/>
	</view-state>
	
	<!-- See http://forum.springframework.org/showthread.php?t=51240 -->
	<!-- Suppress leading slash to go servlet-relative? (Check docs) -->
	<!-- View applies only when directly called; calling flows ignore it? -->
	<end-state id="goto2" view="externalRedirect:contextRelative:/flowpage2.htm"/>
  <end-state id="goto3" view="externalRedirect:contextRelative:/flowpage3.htm"/>
  <end-state id="gotoHome" view="externalRedirect:contextRelative:/index.htm"/>
</flow>
